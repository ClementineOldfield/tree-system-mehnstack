<h1>Login User</h1>

{{#if error}}
    <p><b>Error:</b> {{error}}</p>
{{/if}}

<form method="post" action="/login">
    <div>
        <label for="email">Email</label>
    </div>
    <div>
        <input type="text" name="email" />
    </div>
    <div>
        <label for="password">Password</label>
    </div>
    <div>
        <input type="password" name="password" />
    </div>
    <div>
        <input type="submit" value="Submit Form" />
    </div>
</form>